{% extends '@layouts/base.html.twig' %}

{% block conteudo %}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            {% if erros != false %}
           <div class="col-lg-12">
              <div class="alert alert-danger" role="alert">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                {% for key, mensagem in erros %}
                  {{ mensagem }} <br>
                {% endfor %}
              </div>
            </div>
            {% endif %}          
            <form class="form-horizontal" id="form-cadastro-empresa" action="http://{{ APP_HOST }}/empresa/salvar" method="post">
                <div class="col-lg-12">
                    <section class="panel panel-default">
                        <header class="panel-heading">
                            Cadastro de nova empresa
                        </header>
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="col-lg-3 col-sm-3 control-label" for="razaoSocial">Raz√£o Social</label>
                                <div class="col-lg-9">
                                    <div class="iconic-input right">
                                        <input type="text" id="razaoSocial" name="razaoSocial" class="form-control" required value="{{ empresa.razaosocial }}">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 col-sm-3 control-label" for="nomeFantasia">Nome Fantasia</label>
                                <div class="col-lg-9">
                                    <div class="iconic-input right">
                                        <input type="text" id="nomeFantasia" name="nomeFantasia" class="form-control" required value="{{ empresa.nomefantasia }}">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                            <label class="col-lg-3 col-sm-3 control-label" for="CNPJ">CNPJ</label>
                                <div class="col-lg-9">
                                    <div class="iconic-input right">
                                        <input type="text" id="CNPJ" name="CNPJ" class="form-control" required value="{{ empresa.CNPJ }}">
                                    </div>
                                </div>
                            </div>
                        </div>    
                    </section>
                </div>

                <div class="col-lg-12">
                    <div align="right">
                        <a class="btn btn-success" href="http://{{ APP_HOST }}/empresa/listar">Voltar</a>
                        <button class="btn btn-info" type="submit">Cadastrar</button>
                    </div>
                </div>
                
            </form>   
        </div>
    </section>
</section>
{% endblock %}