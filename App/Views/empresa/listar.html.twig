{% extends '@layouts/base.html.twig' %}

{% block conteudo %}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            {% if mensagem is not empty %}
                <div class="col-lg-12">
                    <div class="alert alert-success" role="alert">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <b>{{ mensagem }}</b>
                    </div>
                </div>
            {% endif %}
            <div class="col-lg-12">
                <section class="panel panel-default">
                    <header class="panel-heading">
                        Empresas disponíveis
                    </header>
                    <div class="panel-body">
                        <table id="lista-empresas" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Razão social</th>
                                    <th>Nome fantasia</th>
                                    <th>CNPJ</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for empresa in empresas %}
                                    <tr>
                                        <td>{{ empresa.idempresa }}</td>
                                        <td>{{ empresa.razaosocial }}</td>
                                        <td>{{ empresa.nomefantasia }}</td>
                                        <td>{{ empresa.CNPJ }}</td>
                                        <td>
                                            <a href="http://{{ APP_HOST }}/empresa/edicao/{{ empresa.idempresa }}"><i class="fa fa-pencil"></i></a>
                                            <a href="http://{{ APP_HOST }}/empresa/exclusao/{{ empresa.idempresa }}"><i class="fa fa-trash-o"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
{% endblock %}