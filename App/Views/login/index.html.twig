{% extends '@layouts/base.html.twig' %}
{% block conteudo %}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            {% if mensagem is not empty %}
                <div class="col-lg-12">
                    <div class="alert alert-success" role="alert">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <b>{{ mensagem }}</b>
                    </div>
                </div>
            {% endif %}
            {% if erros != false %}
                <div class="col-lg-12">
                    <div class="alert alert-danger" role="alert">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        {% for key, mensagem in erros %}
                        {{ mensagem }} <br>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="center-block container-form-login">
                    <section class="panel panel-default white-bg">
                        <header class="panel-heading">
                            Login
                        </header>
                        <section class="panel-body">
                            <form class="form-horizotal" id="form_login" action="http://{{ APP_HOST }}/login/logar" method="post">
                                <div class="form-group">
                                    <label class="sr-only" for="login">Login</label>
                                    <input type="text" class="form-control" placeholder="Login" id="login" name="login"/>
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="senha">Senha</label>
                                    <input type="password" class="form-control" placeholder="Senha" id="senha" name="senha"/>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block">Acessar</button>
                                </div>
                                <p class="text-center">OU</p>
                                <p class="text-center"><a href="http://{{ APP_HOST }}/login/recuperar" class="text-muted">Esqueceu a senha?</a> | <a href="http://{{ APP_HOST }}/login/cadastrar" class="text-muted">Criar uma conta</a></p>
                            </form>
                        </section>
                    </section>    
                </div>
            </div>
        </div>
    </section>
</section>
{% endblock %}