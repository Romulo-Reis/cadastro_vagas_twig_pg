{% extends '@layouts/base.html.twig' %}

{% block conteudo %}
<section id="main-content">
  	<section class="wrapper">
  		<div class="row">
          {% if erros != false %}
                <div class="col-lg-12">
                    <div class="alert alert-danger" role="alert">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        {% for key, mensagem in erros %}
                            {{ mensagem }} <br>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
  		    <form class="form-horizontal" id="form_cadastro_usuario" method="POST" action="http://{{ APP_HOST }}/usuario/editar">          
                <div class="col-lg-12">
                    <section class="panel panel-default">
                        <header class="panel-heading">
                            Editar Usuário
                        </header>
                        <div class="panel-body"> 
                            
                            <div class="form-group">
                                <label  class="col-lg-3 col-sm-3 control-label">Login</label>
                                <div class="col-lg-9">
                                    <div class="iconic-input right">
                                        <input type="hidden" value="{{ usuario.idUsuario }}" name="idUsuario" class="form-control">
                                        <input type="text" maxlength="45" value="{{ usuario.login }}" id="login" name="login" class="form-control" required>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label  class="col-lg-3 col-sm-3 control-label">Senha</label>
                                <div class="col-lg-9">
                                    <div class="iconic-input right">
                                        <input type="password" maxlength="45" value="{{ usuario.senha }}" id="senha" name="senha" class="form-control" required>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label  class="col-lg-3 col-sm-3 control-label">Confirmação de senha</label>
                                <div class="col-lg-9">
                                    <div class="iconic-input right">
                                        <input type="password" maxlength="45" value="{{ usuario.confSenha }}" id="confSenha" name="confSenha" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label  class="col-lg-3 col-sm-3 control-label">E-mail</label>
                                <div class="col-lg-9">
                                    <div class="iconic-input right">
                                        <input type="email" maxlength="45" value="{{ usuario.email }}" id="email" name="email" class="form-control" required>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 col-sm-3 control-label" for="perfil">Perfil</label>
                                <div class="col-lg-9">
                                    <div class="iconic-input right">
                                        <select id="perfil" name="perfil" class="form-control" required value="{{ usuario.perfil.idPerfil}}">
                                            {% for perfil in perfis %}
                                                <option value="{{ perfil.idPerfil }}">{{ perfil.nome }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label  class="col-lg-3 col-sm-3 control-label">Status</label>
                                <div class="col-lg-9">
                                    <label class="radio-inline">
                                        <input type="radio" name="status" id="optionsRadios1" value="1" {{usuario.status == 1? "checked": ""}}> Ativo
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="status" id="optionsRadios2" value="0" {{usuario.status == 0? "checked": ""}}> Inativo
                                    </label>
                                </div>
                            </div>
                        </div>                
                    </section>
                </div>
                <div class="col-md-12">                       
                    <div align="right">   
                        <a class="btn btn-success" href="http://{{ APP_HOST }}/usuario/listar">Voltar</a>
                        <button class="btn btn-info" type="submit">Atualizar</button>
                    </div>           
                </div>
            </form>
        </div>
    </section>
</section>
{% endblock %}