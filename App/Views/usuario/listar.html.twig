{% extends '@layouts/base.html.twig' %}

{% block conteudo %}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            {% if mensagem is not empty %}
                <div class="col-lg-12">
                    <div class="alert alert-success" role="alert">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <b>{{ mensagem }}</b>
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">Usuários cadastrados</div>
                    <div class="panel-body">
                        <h3 class="text-center">{{usuarios|length}}</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-success">
                    <div class="panel-heading">Usuários ativos</div>
                    <div class="panel-body">
                        <h3 class="text-center">3</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-warning">
                    <div class="panel-heading">Usuários inativos</div>
                    <div class="panel-body">
                        <h3 class="text-center">2</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel panel-default">
                    <header class="panel-heading">
                        Usuarios disponíveis
                    </header>
                    <div class="panel-body">
                        <table id="lista-usuarios"  class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Login</th>
                                    <th>Data cadastro</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for usuario in usuarios %}
                                <tr>
                                    <td>{{ usuario.idUsuario }}</td>
                                    <td>{{ usuario.login }}</td>
                                    <td>{{ usuario.dataCadastro | format_datetime(pattern="dd/MM/yyyy HH:mm:ss") }}</td>
                                    <td>{{ usuario.status == 1? "Ativo":"Inativo" }}</td>
                                    <td>
                                        <a href="http://{{ APP_HOST }}/usuario/edicao/{{ usuario.idUsuario }}"><i class="fa fa-pencil"></i></a>
                                        <a href="http://{{ APP_HOST }}/usuario/exclusao/{{ usuario.idUsuario }}"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
{% endblock %}