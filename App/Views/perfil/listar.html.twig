{% extends '@layouts/base.html.twig' %}

{% block conteudo %}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            {% if mensagem is not empty %}
                <div class="col-lg-12">
                    <div class="alert alert-success" role="alert">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <b>{{ mensagem }}</b>
                    </div>
                </div>
            {% endif %}
            <div class="col-lg-12">
                <section class="panel panel-default">
                    <header class="panel-heading">
                        Perfis dispon√≠veis
                    </header>
                    <div class="panel-body">
                        <table id="lista-perfis" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nome</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for perfil in perfis %}
                                <tr>
                                    <td>{{ perfil.idPerfil }}</td>
                                    <td>{{ perfil.nome }}</td>
                                    <td>
                                        <a href="http://{{ APP_HOST }}/perfil/edicao/{{ perfil.idPerfil }}"><i class="fa fa-pencil"></i></a>
                                        <a href="http://{{ APP_HOST }}/perfil/exclusao/{{ perfil.idPerfil }}"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
{% endblock %}