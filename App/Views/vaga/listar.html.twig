{% extends '@layouts/base.html.twig' %}

{% block conteudo %}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            {% if mensagem is not empty %}
                <div class="col-lg-12">
                    <div class="alert alert-success" role="alert">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <b>{{ mensagem }}</b>
                    </div>
                </div>
            {% endif %}
            <div class="col-lg-12">
                <section class="panel panel-default">
                    <header class="panel-heading">
                        Vagas Disponíveis
                    </header>
                    <div class="panel-body">
                        <table id="lista-vagas" class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Título</th>
                                    <th>Descrição</th>
                                    <th>Empresa</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for vaga in vagas %}
                                <tr>
                                    <td>{{ vaga.idvaga }}</td>
                                    <td>{{ vaga.titulo }}</td>
                                    <td width="30%">{{ vaga.descricao }}</td>
                                    <td>{{ vaga.empresa.nomefantasia }}</td>
                                    <td>
                                        <a href="http://{{ APP_HOST }}/vaga/edicao/{{ vaga.idvaga }}"><i class="fa fa-pencil"></i></a>
                                        <a href="http://{{ APP_HOST }}/vaga/exclusao/{{ vaga.idvaga }}"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
{% endblock %}