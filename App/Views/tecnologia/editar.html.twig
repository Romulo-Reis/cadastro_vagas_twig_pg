{% extends '@layouts/base.html.twig' %}

{% block conteudo %}
  <section id="main-content">
  	<section class="wrapper">
  		<div class="row">
  			<form class="form-horizontal" id="form_cadastro_tecnologia" method="POST" action="http://{{ APP_HOST }}/tecnologia/editar">
  				
          {% if erros != false %}
           <div class="col-lg-12">
              <div class="alert alert-danger" role="alert">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                {% for key, mensagem in erros %}
                  {{ mensagem }} <br>
                {% endfor %}
              </div>
            </div>
          {% endif %} 
          <div class="col-lg-12">
            <section class="panel panel-default">
              <header class="panel-heading">
                Editar Tecnologia
              </header>
              <div class="panel-body"> 
                <div class="form-group">
                  <label  class="col-lg-3 col-sm-3 control-label">Nome da Tecnologia</label>
                  <div class="col-lg-9">
                      <div class="iconic-input right">
                        <input type="hidden" value="{{ tecnologia.idtecnologia }}" id="idTecnologia" name="idTecnologia" class="form-control">
                        <input type="text" maxlength="45" value="{{ tecnologia.tecnologia }}" id="tecnologia" name="tecnologia" class="form-control" required>
                      </div>
                  </div>
                </div> 
              </div>               
            </section>
          </div>
          <div class="col-md-12">                       
            <div align="right">   
              <a class="btn btn-success" href="http://{{ APP_HOST }}/tecnologia/listar">Voltar</a>
              <button class="btn btn-info" type="submit">Atualizar</button>
            </div>           
          </div>
        </form>
      </div>
    </section>
  </section>
{% endblock %}